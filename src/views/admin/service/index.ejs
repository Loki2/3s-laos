<!DOCTYPE html>
<html>
<%- include('../../partials/header')%>
<body>
    <%- include('../../partials/navigation')%>

    <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="xs-pd-20-10 pd-ltr-20">
      <div class="min-height-200px">
				<div class="page-header">
					<div class="row">
						<div class="col-md-6 col-sm-12">
							<div class="title">
								<h4>Team Technique</h4>
							</div>
							<nav aria-label="breadcrumb" role="navigation">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="/admin">Home</a></li>
									<li class="breadcrumb-item active" aria-current="page">Services</li>
								</ol>
							</nav>
						</div>
						<div class="col-md-6 col-sm-12 text-right">
							<div class="dropdown">
								<a class="btn btn-primary" href="/admin/services/create-service" role="button">
									Create
								</a>
							</div>
						</div>
					</div>
				</div>
        <div class="card-box pb-20">
          <div class="h5 pd-20 mb-0">Management Service</div>
          <table class="data-table table nowrap">
            <thead>
              <tr>
                <th class="table-plus">Service Name Lao</th>
                <th>Service Name Eng</th>
                <th>Status</th>
                <th>Created At</th>               
                <th class="datatable-nosort">Actions</th>
              </tr>
            </thead>
              <% if(typeof services !== "undefined") { %>
                <tbody>
                  <% services.forEach(function(service){ %>
                    <tr>
                      <td class="table-plus">
                        <div class="name-avatar d-flex align-items-center">
                          <div class="avatar mr-2 flex-shrink-0">
                            <% if(service.image == "" ) { %>
                              <img src="/uploads/noimage.png" class="border-radius-100 shadow" width="40" height="40" alt="">
                            <% } else { %>
                              <img src="/uploads/images/services/<%= service._id %>/<%= service.image %>" class="border-radius-100 shadow" width="40" height="40" alt="">
                            <% } %>
                          </div>
                          <div class="txt">
                            <div class="weight-600"><%= service.name_lao %></div>
                          </div>
                        </div>
                      </td>
                      <td><%= service.name_eng %></td>
                      <td><span class="badge badge-pill" data-bgcolor="#e7ebf5" data-color="#265ed7"><%= service.status %></span></td>
                      <td><%= service.createdAt.toLocaleString() %></td>
                      <td>
                        <div class="dropdown">
                          <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            <i class="dw dw-more"></i>
                          </a>
                          <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                            <!-- <a class="dropdown-item" href="/admin/services/view/<%= service._id %>"><i class="dw dw-eye"></i> View</a> -->
                            <a class="dropdown-item" href="/admin/services/edit/<%= service._id %>"><i class="dw dw-edit2"></i> Edit</a>
                            <a class="dropdown-item" href="/admin/services/delete/<%= service._id %>"><i class="dw dw-delete-3"></i> Delete</a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
                <% } else { %>
                  <tbody>
                    <tr>
                      <td class="table-plus">
                        <div class="name-avatar d-flex align-items-center">
                          <div class="avatar mr-2 flex-shrink-0">
                            <img src="/backend/vendors/images/photo4.jpg" class="border-radius-100 shadow" width="40" height="40" alt="">
                          </div>
                          <div class="txt">
                            <div class="weight-600">Empty ...!</div>
                          </div>
                        </div>
                      </td>
                      <td></td>
                      <td></td>
                      <td><span class="badge badge-pill" data-bgcolor="#e7ebf5" data-color="#265ed7"></span></td>
                      <td>
                        <div class="dropdown">
                          <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            <i class="dw dw-more"></i>
                          </a>
                          <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                            <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
                            <a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
                            <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  </tbody>
              <% }; %>

          </table>
        </div>

			<div class="title pb-20 pt-20"></div>
      <%- include('../../partials/footer')%>
		</div>
	</div>

    <%- include('../../partials/script')%>
</body>
</html>